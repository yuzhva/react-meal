{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "rules": {
    "arrow-parens": ["error", "always"],
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": 0,
    "react/destructuring-assignment": 0,
    "import/prefer-default-export": 0
  }
}
